@model VidlyApp.ViewModels.MoviesViewModel

<h2>Movies</h2>

@if (Model.Movies.Count == 0)
{
    <p>We currently don't have any movies.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
        </tr>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </table>
}