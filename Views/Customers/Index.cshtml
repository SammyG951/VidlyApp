@model VidlyApp.ViewModels.CustomersViewModel

<h2>Customers</h2>

@if (Model.Customers.Count() == 0)
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
        </tr>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td><a asp-controller="Customers" asp-action="Details" asp-route-id="@customer.Id">@customer.Name</a></td>
                <td>@customer.MembershipType.Name</td>
            </tr>
        }
    </table>
}

